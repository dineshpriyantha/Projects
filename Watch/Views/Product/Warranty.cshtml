



@using PagedList
@using PagedList.Mvc
@model IPagedList<Watch.Models.WarrantyReg>
@{
    ViewBag.Title = "Warranty";
}







<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading inbox-head">
                <div class="col-md-4">
                    
                    <h3>
                     Warranty Registration

                    </h3>

                </div>
                

            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_length" id="dataTables-example_length">
                                  
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div id="dataTables-example_filter" class="dataTables_filter">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">

                                <table class="table table-inbox table-hover">
                                    <tr>
                                        <th>Name
                                        </th>
                                        <th>Address
                                        </th>

                                        <th>ModelNo
                                        </th>
                                        <th>Dealer
                                        </th>
                                        <th>Country
                                        </th>

                                        <th>Date</th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model) {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ModelNo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Dealer)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Country)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                               
                                               <a href="javascript:void(0);" data-id="@item.Id" class="deleteItem">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </table>
                                 <div class="pagedList">
                                    @Html.PagedListPager(Model, page => Url.Action("Warranty", new { page }), PagedListRenderOptions.PageNumbersOnly)
                                </div>
                                


                            </div>

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>

        </div>
    </div>
</div>
@section Scripts {

    <script>
        $('.deleteItem').click(function (e) {
            e.preventDefault();
            var $ctrl = $(this);
            if (confirm('Do you really want to delete this item?')) {
                $.ajax({
                    url: '@Url.Action("DeleteRegister")',
                    type: 'POST',
                    data: { id: $(this).data('id') }
                }).done(function (data) {
                    if (data.Result == "OK") {
                        $ctrl.closest('tr').remove();
                    }
                    else if (data.Result.Message) {
                        alert(data.Result.Message);
                    }
                }).fail(function () {
                    alert("There is something wrong. Please try again.");
                })

            }
        });



    </script>

}


